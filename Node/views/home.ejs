            }
            body::-webkit-scrollbar { /* WebKit */
                width: 0;
                height: 0;
            }

            #logo {
                background-color: #f9f9f9;
                width: 100%;
                text-align: center;
                position:fixed;
                top:0;
                height: 50%;
            }
            #bottom {
              position:fixed;
              height: 50%;
              bottom:0;
              width: 100%;
            }
            img {
                margin-top:2%;  
                margin-bottom:1%; 
                width:10%;
            }
            .container {
                margin-top: 5%; 
                width:100%;
                position: fixed;
            }
            
            .btn-default {
              margin-left: 5%;
            }
            form {
                margin-left: 20%;
            }

            p {
                color: white;
            }

            #loginform {
                width:30%;
                float:left;
                margin-left:5%;
            }
            .footer{
