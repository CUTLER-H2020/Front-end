        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

        <style type="text/css">
            body {
                background-color:#2b3e50;
                overflow-y: scroll;
                scrollbar-width: none; /* Firefox */
