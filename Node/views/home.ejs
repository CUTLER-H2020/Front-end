      <div class="modal fade" id="forgot" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">Forgot Password</h4>
              </div>
              
              <div class="modal-body">
                <form method="post" enctype="multipart/form-data" action="forgot" style="margin-left:0;">
                   <div class="form-group">
                    <label for="policyName">Username:</label>
                    <input type="input" class="form-control" placeholder="" name="username" autocomplete="off">
                  </div>
                  <div class="form-group">
                    <label for="email">E-mail:</label>
                    <input type="input" class="form-control" placeholder="" name="email" autocomplete="off">
                  </div>
                  <p style="color:black; text-align:center; opacity:0.6">*Your new password will be sent to your email. Please change your password immediately!</p>

                  </div>
                  
                  <button type="submit" class="btn btn-success" style="border-color: #5DBCD2; background-color: #5DBCD2; width: 50%; margin-left:25%; margin-bottom:5%;">Regenerate</button>
                </form>
              </div>
            </div>
          </div>
        </div>
